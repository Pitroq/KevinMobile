<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KevinMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/secondary_background_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:fontFamily">@font/whiterabbit</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.KevinMobileNoFont" parent="Theme.KevinMobile">
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>